@page "/"

<h1>Hello, world!</h1>

<p>
    The current count is @counterValue
</p>

<SurveyPrompt Title="How is Blazor working for you?" />


<Counter CurrentCount="@counterValue" 
    OnCounterChanged="UpdateCounter"/>

@code{
    private int counterValue = 15;

    private void UpdateCounter(int counter)
    {
        counterValue = counter;
    }
}
